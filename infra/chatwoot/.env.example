# ----------------------
# Rails / App
# ----------------------
RAILS_ENV=development
NODE_ENV=development

# IMPORTANT:
# Generate with:
#   openssl rand -hex 64
# Store this safely. Do NOT lose it.
SECRET_KEY_BASE=replace-with-secure-random-string

FRONTEND_URL=http://localhost:3000
DEFAULT_LOCALE=en

# Allow signup for local development
ENABLE_ACCOUNT_SIGNUP=true


# ----------------------
# Database (PostgreSQL)
# ----------------------

# Preferred single connection string (easy migration later)
DATABASE_URL=postgres://chatwoot:chatwoot@postgres:5432/chatwoot

# Optional individual vars (kept for clarity / debugging)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=chatwoot
POSTGRES_USERNAME=chatwoot
POSTGRES_PASSWORD=chatwoot


# ----------------------
# Redis
# ----------------------

REDIS_URL=redis://redis:6379


# ----------------------
# Logging
# ----------------------

LOG_LEVEL=debug


# ----------------------
# Notes
# ----------------------
# - This file is for LOCAL DEVELOPMENT only
# - Do not commit real secrets
# - For Railway / production:
#     - Use DATABASE_URL from provider
#     - Use managed Redis
#     - Keep SECRET_KEY_BASE the same when migrating
